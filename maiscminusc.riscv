.data

pula: .string "\n"
entrada: .space 1000
opcao: .space 1000


.text

# le qual a opção desejada 
li a7, 8
la a0,opcao #aponta para a string da opção de maiúscula ou minúscula ou só a primeira letra
li a1,1000  # Tamanho da string opção
ecall

# le o tamanho da string
li a7 ,5
ecall
mv t0,a0  #salva o valor do tamanho da string

#le a string
li a7,8
la a0,entrada  # Aponta para a string da entrada
li a1,1000      #tamanho da tring de entrada
ecall

#---------------------------------------------------------------------------------------------------------------------------

#carrega o endereço tanto da opção quanto da entrada
la a0, opcao    # Inicializa o ponteiro para o gabarito
la a1, entrada     # Inicializa o ponteiro para as respostas
#---------------------------------------------------------------------------------------------
# verifica qual foi a letra precionada
lbu t5,0(a0)
#--------------------------------------------------------------
# verifica se a letra é M
addi t4, zero, 77 #77= o valor em maíusculo de M na tabela ascii
beq t5,t4,maiuscula #verifica se a opção é maiuscula
addi t4, zero, -77

# verifica se a letra é m

 addi t4, zero, 109 #109 é igual ao valor da tabela ascii de m
 beq t5, t4, minuscula #verifica se a opçaõ é minuscula
 addi t4, zero, -109
#------------------------------------------------------------------------------

# verifica se a letra é c
addi t4,zero,99 # 99 tabela ascii para c minúsculo
beq t5,t4,capital_primeiro
addi t4,zero,-99


#----------------------------------------------------------------------------------------------
prox_minusculo:
sb t2, 0(a1)  # Atualiza o caractere na string modificada
addi a1, a1, 1  # PrÃ³ximo caractere da string
j minuscula

prox_maiusculo:
sb t2, 0(a1)  # Atualiza o caractere na string modificada
addi a1, a1, 1  # PrÃ³ximo caractere da string
j maiuscula

prox_capital:
sb t2, 0(a1)  # Atualiza o caractere na string modificada
addi a1, a1, 1  # Próximo caractere da string
j capital
#--------------------------------------------------------------------------------------
maiuscula:
lbu t2(a1)

beq t0,zero,fim
addi t0 ,t0,-1

addi t6,zero,122
ble t2,t6,maiusc_especial

j prox_maiusculo

#=========================================================
maiusc_especial:
addi t6,zero, 97
bge t2,t6, maiusc_minusc 
j prox_maiusculo
#=========================================================
maiusc_minusc:
addi t2, t2, -32
j prox_maiusculo
#---------------------------------------------------------------------------------------
minuscula:

lbu t2, 0(a1)

beq t0, zero, fim
addi t0, t0, -1
    
addi t6, zero, 65
bge t2, t6, minusc_especial

j prox_minusculo
#------------------------------------------------------------------
minusc_especial:
addi t6,zero,90
ble t2,t6 minusc_maiusc
j prox_minusculo

#----------------------------------------------------------------
minusc_maiusc:
addi t2,t2,32
j prox_minusculo

#------------------------------------------------------------------------
capital_primeiro:
    lbu t2, 0(a1)
    beq t0, zero, fim
    addi t0, t0, -1
    addi t6, zero, 90
    ble t2, t6, prox_capital
    # Converte caractere minúsculo para maiúsculo
    addi t2, t2, -32
    sb t2, 0(a1)  # Atualiza o caractere na string modificada
    j prox_capital
    
    
capital:
# Carrega caractere da string
    lbu t2, 0(a1)
    beq t0, zero, fim
    addi t0, t0, -1
    addi t6, zero, 32	
    beq  t2,t6, espaco  #se nao for continua iterando
    j prox_capital
    
espaco: 
    sb t2, 0(a1)  # Atualiza o caractere na string modificada
    addi a1, a1, 1  # Próximo caractere da string
    
    lbu t2, 0(a1)
    
    beq t0, zero, fim
    addi t0, t0, -1
    
    addi t6, zero, 90
    ble t2, t6, prox_capital #já é maiusculo
    
    addi t2, t2, -32
    
    j prox_capital

#--------------------------------------------------------------------
fim:

la a0, entrada
    li a7, 4    
    ecall

    la a0, pula
    li a7, 4    
    ecall

    li a7, 10           
    li a0, 0            
    ecall
